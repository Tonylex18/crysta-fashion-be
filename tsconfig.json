{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*", "src/types/flutterwave-node-v3.d.ts"],
	"exclude": ["node_modules", "dist"]
}